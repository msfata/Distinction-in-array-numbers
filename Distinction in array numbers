package com;

import java.util.Arrays;

/*
 * MSFATA ProgrammingHelp
 */
public class Distinction {
	/*
	 * showing smallest difference between numbers in array
	 */
	private static int getSmallestContraDistinction(int... array) {
		Arrays.sort(array);
		int contraDistinction = array[1] - array[0];
		for (int i = 0; i < array.length; i++) {
			for (int j = i + 1; j < array.length; j++) {
				if (array[j] - array[i] > contraDistinction) {
					contraDistinction = array[j] - array[i];
				}
			}
		}
		return contraDistinction;
	}

	/*
	 * showing largest difference between numbers in array
	 */
	private static int getLargestContraDistinction(int... array) {
		Arrays.sort(array);
		int contraDistinction = array[1] - array[0];
		for (int i = 0; i < array.length; i++) {
			for (int j = i + 1; j < array.length; j++) {
				if (array[j] - array[i] < contraDistinction) {
					contraDistinction = array[j] - array[i];
				}
			}
		}
		return contraDistinction;
	}

	/*
	 * main to test
	 */
	public static void main(String[] args) {

		int smallest = getSmallestContraDistinction(new int[] { 1, 5, 15, 500 });
		int largest = getLargestContraDistinction(new int[] { 1, 5, 15, 500 });

		System.out.println("Smallest difference : " + smallest);
		System.out.println("Largest  difference : " + largest);
	}
}
